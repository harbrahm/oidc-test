#!/bin/bash

DOCKER_CONTAINER_NAME=keycloak1
DOCKER_IMAGE=jboss/keycloak
KEYCLOAK_USER=admin
KEYCLOAK_PASSWORD=admin

#sudo docker run --name $DOCKER_CONTAINER_NAME -p 8880:8880 -p 8843:8843 -p 8990:8990 -e HTTP_PORT=8880 -e HTTPS_PORT=8843 -e MANAGEMENT_HTTP_PORT=8990 -e KEYCLOAK_ADMIN_USER=$KEYCLOAK_USER -e KEYCLOAK_ADMIN_PASSWORD=$KEYCLOAK_PASSWORD  -d $DOCKER_IMAGE 
DATABASE=H2
PORT=${PORT:-8080}

sudo  docker run -p $PORT:8080 -p 8443:8443  --name $DOCKER_CONTAINER_NAME \
  -e KEYCLOAK_USER=$KEYCLOAK_USER \
  -e KEYCLOAK_PASSWORD=$KEYCLOAK_PASSWORD \
  -e DB_VENDOR=$DATABASE \
  -d $DOCKER_IMAGE
